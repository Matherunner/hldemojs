{
	"name": "hldemojs",
	"version": "1.0.0",
	"description": "Half-Life demo file parser",
	"main": "hldemo.js",
	"author": "Chong Jiang Wei",
	"license": "MIT",
	"scripts": {
		"debug": "gulp",
		"release": "gulp release"
	},
	"babel": {
		"presets": [
			"latest"
		]
	},
	"eslintConfig": {
		"extends": "airbnb",
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"no-tabs": [
				"off"
			],
			"no-param-reassign": [
				"off"
			],
			"no-plusplus": [
				"error",
				{
					"allowForLoopAfterthoughts": true
				}
			]
		},
		"env": {
			"browser": true
		},
		"plugins": [
			"import"
		]
	},
	"devDependencies": {
		"babel-loader": "^6.2.7",
		"babel-preset-latest": "^6.16.0",
		"eslint": "^3.9.0",
		"eslint-config-airbnb": "^12.0.0",
		"eslint-plugin-import": "^2.0.1",
		"eslint-plugin-jsx-a11y": "^2.2.3",
		"eslint-plugin-react": "^6.4.1",
		"gulp": "^3.9.1",
		"gulp-babel": "^6.1.2",
		"gulp-eslint": "^3.0.1",
		"gulp-rename": "^1.2.2",
		"gulp-uglify": "^2.0.0",
		"webpack-stream": "^3.2.0"
	}
}
